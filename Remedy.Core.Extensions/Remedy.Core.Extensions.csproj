<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<GenerateDocumentationFile>True</GenerateDocumentationFile>
		<Title>Remedy.Core.Extensions</Title>
		<Authors>SamParklcf@hotmail.com</Authors>
		<Description>Provides core features by extensions</Description>
		<Copyright>$(AssemblyName)Â©2022</Copyright>
		<PackageProjectUrl>https://github.com/SamParklcf/Project-Remedy</PackageProjectUrl>
		<RepositoryUrl>https://github.com/SamParklcf/Project-Remedy</RepositoryUrl>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageLicenseFile>LICENSE</PackageLicenseFile>
		<PackageTags>Remedy, Core, Extensions</PackageTags>
		<PackageIcon>128.png</PackageIcon>
	</PropertyGroup>

	<ItemGroup>
		<None Include="..\Designs\Icons\128.png">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="..\LICENSE">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="..\README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="GitVersion.MsBuild" Version="5.10.1">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
	</ItemGroup>

</Project>
